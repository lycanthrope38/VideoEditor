<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
              android:orientation="horizontal"
              android:background="@color/color_bottom_bar"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/btnRemoveAudio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/normal_space"
            android:src="@drawable/icon_remove"
            android:layout_marginStart="@dimen/normal_space"/>

    <TextView
            android:textSize="@dimen/text_size_xlarge"
            android:textColor="@drawable/btn_apply_selector"
            android:id="@+id/text_audio_picked"
            android:background="@drawable/bkg_add_audio"
            android:paddingLeft="@dimen/normal_space"
            android:paddingTop="@dimen/tiny_space"
            android:paddingRight="@dimen/normal_space"
            android:paddingBottom="@dimen/tiny_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_space"
            android:layout_marginRight="@dimen/normal_space"
            android:text="@string/text_add_audio"
            android:singleLine="true"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginEnd="@dimen/normal_space"/>
</LinearLayout>
