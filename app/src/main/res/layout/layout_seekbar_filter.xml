<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#402d2d2d"
        android:padding="1dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <SeekBar android:id="@+id/seekBarAlpha" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxHeight="20dp" android:max="100" android:minHeight="20dp" android:layout_toLeftOf="@+id/txtAlpha" android:layout_centerVertical="true" />
    <TextView  android:textStyle="bold" android:textColor="#fff" android:id="@+id/txtAlpha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="40%" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
</RelativeLayout>
